<script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyD0odVNjELVAzOCFiywP7t_aEG_VPusGUo"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->


<div class="page-header">
  <%= link_to customers_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_customer_path(@customer), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show customer</h1>
</div>

<dl class="dl-horizontal">
  <dt>Latitude:</dt>
  <dd><%= @customer.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @customer.longitude %></dd>

  <dt>Name:</dt>
  <dd><%= @customer.name %></dd>

  <dt>Address:</dt>
  <dd><%= @customer.address %></dd>

  <dt>More info:</dt>
  <dd><%= @customer.more_info %></dd>

  <dt>Age:</dt>
  <dd><%= @customer.age %></dd>

</dl>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
